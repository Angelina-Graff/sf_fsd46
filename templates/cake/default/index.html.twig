{% extends 'base.html.twig' %}

{% block title %}Tous les Gâteaux{% endblock %}

{% block body %}
    <h1>Les Gâteaux</h1>

    <div class="grid">
        {% for cake in cakes %}
            <div class="grid-item">
                <img src="{{ asset('uploads/cake/' ~ cake.image) }}" alt="{{ cake.name }}"/>
                <h2>{{ cake.name }}</h2>
            </div>
        {% endfor %}

        <div class="grid-item">
            <a href="{{ path('app_cake_add') }}" class="success">
                {{ ux_icon('icons8:plus', {'class': 'icon'}) }}
                Nouveau Gâteau
            </a>
        </div>
    </div>
{% endblock %}
